@model SMS_Data.Models.Student

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .title {
        font-size: 24px;
        font-weight: bold;
        margin-top: 30px;
        color: black;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #1c1c1c;
        padding: 10px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        border-bottom: 1px solid #ccc;
    }

    .titlenew {
        color: ghostwhite;
    }

    .card-body {
        padding: 20px;
    }

    .profile-picture {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
        object-position: center;
        box-shadow: 0 6px 12px rgba(0,0,0,0.4);
        border: 2px solid black;
    }

    .btn-confirm {
        border-color: #dc3545;
        margin-right: 10px;
        background-color: #dc3545;
        border-radius: 13px;
        color: #fff;
        padding: 8px 16px;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-confirm:hover {
            border-color: #bd2130;
            background-color: #bd2130;
            color: #fff;
        }


    .btn-cancel {
        background-color: #fff;
        border-color: #ddd;
        color: #333;
        border-radius: 13px;
        padding: 8px 16px;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-cancel:hover {
            background-color: #f8f9fa;
            border-color: #ccc;
        }

    .nametag {
        font-size: 18px;
        font-weight: 500;
        color: red;
    }
</style>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h3 class="titlenew">Delete Student</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (Model.ProfilePictureData != null && Model.ProfilePictureData.Length > 0)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(Model.ProfilePictureData)" alt="Profile Picture" class="profile-picture" />
                    }
                </div>
                <div class="col-md-8">
                    <h4 class="title">You Are Going To Delete</h4>
                    <span class="nametag">@Html.DisplayFor(model => model.StudentName)</span>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="StudentId" />
                        <div class="text-right">
                            <button type="submit" class="btn btn-confirm">Confirm</button>
                            <button type="button" class="btn btn-cancel" onclick="window.history.back()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
   